---
title: Cliente Template

# true if the page is included in the menu
listed: false

# true if the page is published
published: true

# position among sibling pages
# position: 1

# sets a redirection to the given url (301)
# redirect_url: "<url to a page or to a remote url>"

# content type that this page is templatizing
content_type: clienti

# editable_elements:
#   'some_block/some_slug': "<text>"
#   'some_block/some_slug': "<relative path to the file under the public/samples folder>"
---
{% extends parent %}

{% block main %}

  <h3>{{ clienti.nome_e_cognome | escape }}</h3>

    <div class="posts">
    {% for preventivo in contents.preventivi %}
      <div class="post-listing">
        <h3>{{ preventivo.titolo_leggibile | escape }}</h3>
        <div class="teaser">{{ preventivo.messaggio }}</div>
        <p><a href="/preventivi/{{ preventivo._slug }}">Read More</a></p>
      </div>
    {% endfor %}
    </div>

{% endblock %}
