---

{% capture titolo_pagina %}
    {{ preventivi.titolo_leggibile | escape }}
{% endcapture %}
{% capture codice_preventivo %}
    {{ preventivi.public_id | escape }}
{% endcapture %}
{% capture data_preventivo %}
    {{ preventivi.created_at | localized_date: '%d-%b-%Y' }}
{% endcapture %}

{% extends parent %}



{% block main %}

        <hr />

        <div class="panel">
            <h5><i>Bologna, {{ data_preventivo }}</i></h5>
            <p>{{ preventivi.messaggio}}</p>
        </div>

        <h2 class="subheader">{{ titolo_pagina }}:</h2>


        <table>
            <thead>
                <tr>
                    <th width="70%">Nome/Descrizione</th>
                    <th style="text-align:right" width="10%">Prezzo</th>
                    <th style="text-align:right" width="10%">Quantit√†</th>
                    <th style="text-align:right" width="10%">Sconto</th>
                    <th style="text-align:right" width="10%">Subtotale</th>
                </tr>
            </thead>
            <tbody>
                {% for riga_preventivo in preventivi.righe_preventivo %}
                    <tr>
                        <td><h5>{{riga_preventivo.nome_prodotto}}</h4></td>
                        <td style="text-align:right"><h5>{{riga_preventivo.prezzo}}</h5></td>
                        <td style="text-align:right"><h5>{{riga_preventivo.quantita}}</h5></td>
                        <td style="text-align:right"><h5>{{riga_preventivo.percentuale_sconto}}%</h5></td>
                        <td style="text-align:right"><h5>{{riga_preventivo.prezzo_totale}}</h5></td>
                    </tr>
                    <tr>
                        <td colspan="3">{{riga_preventivo.descrizione}}</td>
                        <td colspan="2"></td>
                    </tr>
                {% endfor %}
                    <tr>
                        <td style="text-align:right" colspan="3">Imponibile</td>
                        <td style="text-align:right" colspan="2"><h5>{{preventivi.imponibile}}</h5></td>
                    </tr>
                    <tr>
                        <td style="text-align:right" colspan="3">IVA 22%</td>
                        <td style="text-align:right" colspan="2"><h5>{{preventivi.iva}}</h5></td>
                    </tr>
                    <tr>
                        <td style="text-align:right" colspan="3"><h4>TOTALE:</h4></td>
                        <td style="text-align:right" colspan="2"><h4>{{preventivi.totale_iva_inclusa}}</h4></td>
                    </tr>
            </tbody>
        </table>

        <div class="panel">
            <h5><i>Preventivo inviato da:</i></h5>
            <strong>Giulio Locatelli</strong><br/>
            Telefono: <strong>800 782 217</strong><br/>
            Email: <strong>giulio.locatelli@defibrillatori-online.com</strong>
        </div>

{% endblock %}
